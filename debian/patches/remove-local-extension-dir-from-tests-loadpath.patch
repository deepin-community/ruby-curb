-$EXTDIR = File.join($TOPDIR, 'ext')
+#$EXTDIR = File.join($TOPDIR, 'ext')
 $LIBDIR = File.join($TOPDIR, 'lib')
 $:.unshift($LIBDIR)
-$:.unshift($EXTDIR)
